<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/StemLearningWorldTheme"
    android:background="@color/background_material_dark"
    android:weightSum="10"
    tools:context="com.stemlearningworld.stem_app_one.MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:background="@drawable/banner1"
                    android:textAlignment="center"
                    android:text="Centro de Aprendizaje STEM"
                    android:textSize="24sp"
                    android:gravity="bottom"
                    android:textColor="@color/foreground_material_dark"
                    />


            <!--First row-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:elevation="10dp"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/filescolor"
                    android:elevation="10dp"


                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_folder_open"
                        android:tint="@color/icons"
                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/filescolorlight"
                        android:text="Files"
                        android:textColor="@color/icons"
                        android:textAlignment="center"
                        android:elevation="10dp"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/audiocolor"
                    android:elevation="10dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_headphones"
                        android:tint="@color/icons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/audiocolorlight"
                        android:text="Audio"
                        android:textColor="@color/icons"
                        android:textAlignment="center"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bookButton"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/bookcolor"
                    android:elevation="10dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_book"
                        android:tint="@color/icons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/bookcolorlight"
                        android:text="Reading"
                        android:textColor="@color/icons"
                        android:textAlignment="center"

                        />

                </LinearLayout>

            </LinearLayout>
                <!--End First row-->

                <!--Second row-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:elevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/videocolor"
                    android:elevation="10dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_movie"
                        android:tint="@color/icons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/videocolorlight"
                        android:text="Video"
                        android:textColor="@color/icons"
                        android:textAlignment="center"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/testcolor"
                    android:elevation="10dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_paste"
                        android:tint="@color/icons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/testcolorlight"
                        android:text="Exams"
                        android:textColor="@color/icons"
                        android:textAlignment="center"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/paymentcolor"
                    android:elevation="10dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_calendar_day"
                        android:tint="@color/icons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/paymentcolorlight"
                        android:text="Payment"
                        android:textColor="@color/icons"
                        android:textAlignment="center"

                        />
                </LinearLayout>

            </LinearLayout>


            <!-- End second row-->
            <!--Third row-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:elevation="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/recordingcolor"
                    android:elevation="10dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_video"
                        android:tint="@color/icons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/recordingcolorlight"
                        android:text="Recording Tool"
                        android:textColor="@color/icons"
                        android:textAlignment="center"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/smartcolor"
                    android:elevation="10dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_lab"
                        android:tint="@color/icons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/smartcolorlight"
                        android:text="STEM Tools"
                        android:textColor="@color/icons"
                        android:textAlignment="center"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical"
                    android:background="@color/homeworkcolor"
                    android:elevation="10dp"

                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_action_bus"
                        android:tint="@color/icons"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginTop="30dp"
                        android:background="@color/homeworkcolorlight"
                        android:text="Homework"
                        android:textColor="@color/icons"
                        android:textAlignment="center"

                        />

                </LinearLayout>

            </LinearLayout>


            <!-- End third row-->





        </LinearLayout>



    </ScrollView>
