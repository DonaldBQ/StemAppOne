<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/StemLearningWorldTheme"

    android:weightSum="10"
    tools:context="com.stemlearningworld.stem_app_one.MainActivity">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <TextView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/banner_logo"
                android:textAlignment="textStart"
                android:paddingBottom="10dp"
                android:fontFamily="@font/montserratlight"
                android:text="@string/company_name"
                android:textSize="18sp"
                android:gravity="bottom"
                android:textColor="@color/foreground_material_dark"
                tools:ignore="RtlCompat" />

        </LinearLayout>

    <LinearLayout
        android:background="@color/bookcolor"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:layout_weight="8"
            android:id="@+id/chart1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@android:color/white"
            />



        <TextView
            android:gravity="center_vertical"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Lux"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />




    </LinearLayout>

</LinearLayout>
